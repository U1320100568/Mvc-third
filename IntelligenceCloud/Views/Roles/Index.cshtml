@model IQueryable<IGrouping<int?, IntelligenceCloud.Models.RoleAndFeatureViewModel>>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var role in Model)
{
<div class="panel panel-default">
    <div class="panel-heading"><b>權限： @Html.DisplayFor(title => role.FirstOrDefault().Description)</b></div>

    <table class="table">

      
        <tr>
            <th>
                @Html.DisplayNameFor(model => role.FirstOrDefault().ControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => role.FirstOrDefault().ActionName)
            </th>
            <th></th>
        </tr>
        @foreach (var feature in role)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Model => feature.ControllerName)
                </td>
                <td>
                    @Html.DisplayFor(Model => feature.ActionName)
                </td>
                <td></td>
            </tr>
        }

    </table>
    <div class="panel-footer text-right">@Html.ActionLink("詳細", "Details", new { id = role.FirstOrDefault().RoleNum }  )</div>
</div>
}


