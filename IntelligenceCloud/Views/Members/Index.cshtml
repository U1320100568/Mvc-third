@model IEnumerable<IntelligenceCloud.Models.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<h2>@ViewBag.Msg</h2>
<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Search", "Members", FormMethod.Get))
    {
        <p>
            <div class="input-group col-md-3">
                @Html.TextBox("searchString", "", htmlAttributes: new { placeholder = "搜尋", @class = "form-control input-sm" })
                <span class="input-group-btn ">
                    <input type="submit" class="btn btn-primary btn-sm" />
                </span>
            </div>
        </p>
    }
</p>




   
<table class="table">
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberPwd)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.isDeleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberPwd)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.isDeleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
            </td>
        </tr>
    }

</table>
