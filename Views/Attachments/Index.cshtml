@model IEnumerable<IntelligenceCloud.Models.Attachment>
@using IntelligenceCloud.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AttachmentPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttachmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttachmentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttachmentUse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UploadTime)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DownloadTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AttachmentPath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttachmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttachmentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttachmentUse)
        </td>
        <td>
            @Html.DisplayName(IdentityHelper.GetMemberName(item.MemberId))
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UploadTime)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DownloadTime)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.AttachmentId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AttachmentId }) |
            @Html.ActionLink("Download", "Download", new { id = item.AttachmentId })

        </td>
    </tr>
}

</table>
